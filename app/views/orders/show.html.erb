<div class="banner-small" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.4)), url(https://diymusician.cdbaby.com/wp-content/uploads/2016/12/studio-image-diy-blog.jpeg);">
  <div class="container">
    <h1>Order Summary</h1>
  </div>
</div>

<div class="container">
  <div class="row py-4">
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary m-5"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON: </strong> <%= @order.created_at.to_date %></li>
        <hr>
        <li><strong>Event: </strong> <%= @order.event.event_name %> [<%= @order.event_sku %>]</li>
        <hr>
        <li><strong>TOTAL: </strong> <%= humanized_money_with_symbol @order.amount %></li>
        <hr>
        </li>
      </ul>
    </div>
  </div>
  <%= link_to "Go to stream", room_path(@order.event.room), class: "btn btn-success"  %>
</div>
