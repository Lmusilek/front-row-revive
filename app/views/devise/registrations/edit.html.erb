 <div class="container">
  <div class="row p-5">
    <div class="account-container">

    <%= render "users/partial/tabs" %>

      <div id="Account Overview" class="tabcontent">
        <div class="row p-5">
          <div class="col-md-12">
                  <h2>Edit Profile</h2>
                    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                      <%= f.error_notification %>

                      <div class="form-inputs">
                        <%= f.input :first_name, required: true, autofocus: true, input_html: {value: current_user.first_name}  %>

                        <%= f.input :first_last, required: true, input_html: {value: current_user.last_name}  %>

                        <%= f.input :email, required: true, input_html: {value: current_user.email}  %>

                        <%= f.input :location, required: true, input_html: {value: current_user.location}  %>

                        <%= f.input :dob, required: true, input_html: {value: current_user.dob}  %>

                        <% if current_user.artist? %>
                          <%= f.input :artist_name, hint: "leave it blank if you don't want to change it", required: false, input_html: { value: current_user.artist_name } %>
                          <%= f.label :Bio %>
                          <%= f.rich_text_area :bio, hint: "leave it blank if you don't want to change it", required: false, input_html: { value: current_user.artist_name, maxlength: 255 } %>
                        <% end %>

                        <%= f.input :bank_details, required: true, input_html: {value: current_user.bank_details}  %>

                        <%= f.input :facebook, input_html: {value: current_user.facebook} %>

                        <%= f.input :instagram, input_html: {value: current_user.instagram} %>

                        <%= f.input :youtube, input_html: {value: current_user.youtube} %>


                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                        <% end %>

                        <%= f.input :password,
                                    hint: "leave it blank if you don't want to change it",
                                    required: false,
                                    input_html: { autocomplete: "new-password" } %>
                        <%= f.input :password_confirmation,
                                    required: false,
                                    input_html: { autocomplete: "new-password" } %>
                        <%= f.input :current_password,
                                    hint: "we need your current password to confirm your changes",
                                    required: false,
                                    input_html: { autocomplete: "current-password" } %>

                      </div>

                        <div class="form-actions">
                          <%= f.button :submit, "Update" %>
                        </div>

                    <% end %>

                    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
                    <%= link_to "Back", :back %>


              </div>
            </div>
          </div>
        </div>
      </div>
