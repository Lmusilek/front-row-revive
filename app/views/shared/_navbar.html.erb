<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to events_path, class: "navbar-brand" do %>
    <p>Front<strong>Row</strong><%= image_tag "https://res.cloudinary.com/ddqpdj02o/image/upload/v1614705778/Stand_Up_Comedy_9_mpuvgr.png" %></p>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

     <div class="form-field"><%= form_tag search_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    id: "form-field",
    placeholder: "Find an artist, event or genre..."
  %>
  <%= submit_tag "Search", id: "submit-button" %>
<% end %>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Tickets", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">

          <%= image_tag "https://kitt.lewagon.com/placeholder/users/aimee-r", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Events", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
