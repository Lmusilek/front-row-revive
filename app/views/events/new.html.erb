<div class="container">
  <div class="row p-5">
    <div class="account-container">


    <%= render "users/partial/tabs" %>

      <div id="Account Overview" class="tabcontent">
        <div class="row p-5">
          <div class="col-md-12">
            <h2>New Event</h2>
              <%= simple_form_for (@event) do |f| %>
                <%= f.input :event_name, input_html: { class: "nice-class", maxlength: 50 } %>
                <%= f.label :Description %>
                <%= f.rich_text_area :description, input_html: { maxlength: 255 } %>
                  <label class="flex switch switch-primary">
        <%= f.label :Online_show? %>
        <%= f.input :online, label: false, as: :boolean, class: 'form-control' %>
        </label>
        <label class="flex switch switch-primary">
        <%= f.label :In_person_show? %>
        <%= f.input :in_person, label: false, as: :boolean, class: 'form-control' %>
        </label>
                <%= f.time_zone_select :time_zone %>
                <%= f.input :start_time, as: :string, required: true, input_html: {class: "datepicker"} %>
                <%= f.input :end_time, as: :string, required: true, input_html: {class: "datepicker"} %>
                <%= f.input :address %>
                <%= f.input :city %>
                <%= f.country_select :country, priority_countries: ["GB", "US"] %>
                <%= f.input :price_cents, label: "Price per Ticket" %>
                <%= f.currency_select(:currency, ["USD", "EUR", "GBP", "ZAR"], {}, {class: "form-control"}) -%>
                <%# <%= f.input :funding, label: "Crowd Funding Target" %> 
                <%= f.association :genres, multiple: true, size: 3, input_html: { class: 'select2'}, label: "Select Genres" %>
                 <%= f.input :photo, as: :file, input_html: { class: "d-none" }, label_html: { class: 'upload-photo'}, label:  "ğŸ“· Upload a photo" %>
                <%= f.submit 'Add Event', class: 'btn btn-primary' %>
              <% end %>
            </div>
          </div>
        </div>

    </div>
  </div>
</div>

