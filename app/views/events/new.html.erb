<div class="banner-small" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.4)), url(https://diymusician.cdbaby.com/wp-content/uploads/2016/12/studio-image-diy-blog.jpeg);">
  <div class="container">
    <h1>Create a new event</h1>
  </div>
</div>

<div class="container rounded" style="width: 900px;">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= simple_form_for (@event) do |f| %>
        <%= f.input :event_name, input_html: { class: "nice-class", maxlength: 50 } %>
        <%= f.label :Description %>
      
        <%= f.rich_text_area :description, input_html: { maxlength: 150 } %>
        <label class="flex switch switch-primary">
        <%= f.label :Online_show? %>
        <%= f.input :online, label: false, as: :boolean, class: 'form-control' %>
        </label>
        <label class="flex switch switch-primary">
        <%= f.label :In_person_show? %>
        <%= f.input :in_person, label: false, as: :boolean, class: 'form-control' %>
        </label>
        <%= f.input :start_time, as: :string, required: true, input_html: {class: "datepicker"} %>
        <%= f.input :end_time, as: :string, required: true, input_html: {class: "datepicker"} %>
        <%= f.input :city %>
        <%= f.country_select :country, priority_countries: ["GB", "US"] %>
        <%= f.input :price_cents, label: "Price per Ticket in Â£" %>
        <%= f.input :funding, label: "Crowd Funding Target" %>
        <%= f.association :genres, multiple: true, size: 3, input_html: { class: 'select2'}, label: "Select your Genre" %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Add your Event', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
 </div>

