
  <div class="row p-5">
    <div class="col-md-12">
      <h2>Create a new event</h2>
        <div class="">
          <%= simple_form_for (@event), html:  {onsubmit: "return validateForm()"} do |f| %>
            <%= f.input :event_name, input_html: { class: "nice-class", maxlength: 50 }  %>
            <%= f.label :Description %>
            <%= f.rich_text_area :description, input_html: { maxlength: 150 }, input_html: {class: "pr-0"} %>
             <label class="flex switch switch-primary">
            <%= f.label :Online_show? %>
            <%= f.input :online, label: false, as: :boolean, class: 'form-control' %>
            </label>
            <label class="flex switch switch-primary">
            <%= f.label :In_person_show? %>
            <%= f.input :in_person, label: false, as: :boolean, class: 'form-control' %>
            </label>
            <div class="d-flex">
              <div class="col-md-6 pl-0"><%= f.input :start_time, as: :string, required: true, input_html: {class: "datepicker"} %></div>
              <div class="col-md-6 pr-0"><%= f.input :end_time, as: :string, required: true, input_html: {class: "datepicker"} %></div>
            </div>

            <%= f.input :city, label: "City and Country" %>
            <%= f.country_select :country, priority_countries: ["GB", "US"], html: { autocomplete: 'off' } %>
             <p class="mt-3 mb-1">Price per Ticket</p>
            <%= f.input :price_cents, input_html: { class: 'price-width bootstrap-val-override'}, label: false %>
            <p class="mb-1">Genres</p>
            <%= f.association :genres, multiple: true, size: 3, input_html: { class: 'select2'}, label: false %>
            <%= f.input :photo, as: :file, input_html: { class: "d-none" }, label_html: { class: 'upload-photo'}, label:  "ðŸ“·     Upload a photo  " %>
            <%= f.submit 'Add your Event', class: 'btn btn-primary' %>
            <div class="form-buffer"></div>
          <% end %>
        </div>
    </div>
  </div>






